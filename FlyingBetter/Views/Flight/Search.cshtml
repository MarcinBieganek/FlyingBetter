@model FlyingBetter.Models.FlightSearch.FlightSearchModel
@{
    ViewBag.Title = "Flying Better";
}

@Styles.Render("~/Content/FormValidation.css")

<div class="jumbotron">
    <h1>Flying Better</h1>
    <p class="lead">Search flights smart and easy.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<form method="POST">
    <div class="form-group row">
        <label class="col-sm-2 col-xs-12 col-form-label">From</label>
        @Html.TextBoxFor(m => m.From, new { @class = "col-sm-10 col-xs-12" }) @Html.ValidationMessageFor(m => m.From)
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-xs-12 col-form-label">To</label>
        @Html.TextBoxFor(m => m.To, new { @class = "col-sm-10 col-xs-12" }) @Html.ValidationMessageFor(m => m.To)
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date</label>
        @Html.EditorFor(m => m.Date, new { htmlAttributes = new { min = DateTime.Now.ToString("yyyy-MM-dd"), @class = "col-sm-10" } }) @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>